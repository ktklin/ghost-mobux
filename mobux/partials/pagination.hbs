<div class="pagination">
    <div class="row margin-bottom-2rem">
        <div class="column text-center">
            <span class="page-number">Seite {{page}} von {{pages}}</span>
        </div>
    </div>
    <div class="row">
        {{#if prev}}
        <div class="column">
            <a class="button button-outline display-block" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> Neuere Artikel</a>
        </div>
        {{/if}}
        {{#if next}}
        <div class="column">
            <a class="button button-outline display-block" href="{{page_url next}}">&Auml;ltere Artikel <span aria-hidden="true">&rarr;</span></a>
        </div>
        {{/if}}
    </div>
</div>
